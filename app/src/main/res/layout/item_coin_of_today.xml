<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coin"
            type="com.finance.trade_learn.models.modelsConvector.CoinsHome" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutCoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coinInfo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:padding="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@{coin.coinSymbol}"
                tools:text="Etherium"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/coinImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="3dp"
                android:paddingEnd="5dp"
                app:imageUrl="@{coin.coinImage}"
                android:paddingStart="0dp"
                app:layout_constraintStart_toEndOf="@id/coinName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <TextView
                android:id="@+id/coinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="1dp"
                app:layout_constraintEnd_toStartOf="@id/coinPercent"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:text="@{coin.coinPrice}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/coinPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginStart="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/percent_background"
                android:textColor="@color/white"
                android:text="@{coin.coinChangePercente}"
                android:textSize="16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification"
            app:layout_constraintTop_toBottomOf="@id/coinInfo"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="10dp">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_notifications" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#F1EDED" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>