<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F6F3F3"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/sendMail"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:padding="2dp"
                    android:src="@drawable/send_mail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dp"
                    android:padding="2dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/pozitive"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@id/sendMail"
                    app:layout_constraintEnd_toStartOf="@id/searchCoin"
                    app:layout_constraintStart_toEndOf="@id/sendMail"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/searchCoin"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>


        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/dividerAd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B5B5B5"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/noticeCompose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dividerAd">

        </androidx.compose.ui.platform.ComposeView>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/PopulerCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/dividerAd"
            tools:layout_height="20dp">
        </androidx.compose.ui.platform.ComposeView>


        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/PopulerCoins" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1">

        </androidx.compose.ui.platform.ComposeView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>